CC = mpicc
MAKE = make
LIBPATH = ../../
LIBRARIES = -lpll-SSE3-MPI -lm
RM = rm -f

all: pll-sse3-mpi

pll-sse3-mpi: main.c
	$(MAKE) -C $(LIBPATH) -f Makefile.SSE3.MPI.TEST
	@echo "==> Building PLL example"
	$(CC) -D_FINE_GRAIN_MPI -g $+ -L $(LIBPATH) $(LIBRARIES) -o $@ 

clean : 
	$(RM) pll-sse3-mpi

.PHONY: all clean
